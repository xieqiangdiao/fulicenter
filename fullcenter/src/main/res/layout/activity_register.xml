<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.ucai.fulicenter.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_title"
            android:text="账户注册"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_loginName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="用户名" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_account" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_NiChen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_Name"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etNiChen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etlogin"
            android:layout_weight="1"
            android:hint="昵称" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_account" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_PassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_NiChen"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPasWord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etnichen"
            android:layout_weight="1"
            android:hint="密码" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pwd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_CpassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_PassWord"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCpassWord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="确认密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pwd" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_CpassWord"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tb_btn_login_orange_normal"
        android:text="免费注册" />


</RelativeLayout>
